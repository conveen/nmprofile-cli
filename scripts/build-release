#!/usr/bin/env sh

CARGO=$(which cargo)

if [ -f $CARGO  ] && [ -x $CARGO ]
then
    echo "::: INFO: Checking code for errors" && \
    cargo check --lib && \
    echo "::: INFO: Running library and doc tests" && \
    cargo test --lib && cargo test --doc && \
    echo "::: INFO: Building code in release mode" && \
    cargo build --release && \
else
    echo "::: ERROR: Failed to locate cargo executable"
    exit 1
fi
